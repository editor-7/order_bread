# 서버 포트 (기본값: 5000)
PORT=5000

# MongoDB 연결 URI
MONGODB_URI=mongodb://localhost:27017/shoping_mall

# JWT 토큰 서명용 시크릿 (배포 시 반드시 강력한 값으로 변경)
# 생성 예: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production

# 환경 (development | production)
# 배포 시 NODE_ENV=production 이면 JWT_SECRET 필수
NODE_ENV=development
